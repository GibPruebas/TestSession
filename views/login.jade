  body.login
    .row
      .main-login.col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
        //
          <div class="logo">
          <img src="assets/images/logo.png">
          </div>
        // start: LOGIN BOX
        .box-login
          h3 Global Innovation Business
          p
            | Please enter your information to log in
          form.form-login(action='/login', method='post')
            .errorHandler.alert.alert-danger.no-display
              i.fa.fa-remove-sign
              |  You have some form errors. Please check below..
            fieldset
              .form-group
                span.input-icon
                  select(name="idioma")#idioma.form-control
                    option(value='es', selected='') Español
                    option(value='in') Ingles
                    option(value='fr') Francés
                    option(value='pt') Portugués
                    option(value='ru') Ruso
                    option(value='de') Alemán
                    option(value='zh') Chino
              .form-group
                span.input-icon
                  input.form-control(type='text', name='username', placeholder='Username')
                  i.fa.fa-user
              .form-group
                span.input-icon
                  select(name="empresa")#empresa.form-control
                    option(value='DEMO', selected='') Empresa de Demostración
              .form-group
                span.input-icon
                  select(name="sucursal")#sucursal.form-control
                    option(value='SUCURSAL', selected='') Sucursal de Demostración
              .form-group.form-actions
                span.input-icon
                  input.form-control.password(type='password', name='password', placeholder='Password')
                  i.fa.fa-lock
                  a.forgot(href='#')
                    | I forgot my password
              .form-actions
                //
                  <label for="remember" class="checkbox-inline">
                  <input type="checkbox" class="grey remember" id="remember" name="remember">
                  Keep me signed in
                  </label>
                button.btn.btn-green.pull-right(type='submit')
                  | Login 
                  i.fa.fa-arrow-circle-right
              //
                <div class="new-account">
                Don't have an account yet?
                <a href="#" class="register">
                Create an account
                </a>
                </div>
